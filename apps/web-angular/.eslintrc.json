{
  "root": true,
  "ignorePatterns": ["dist", "node_modules"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.app.json"],
        "createDefaultProgram": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "prettier/prettier": "error"
      }
    }
  ]
}
